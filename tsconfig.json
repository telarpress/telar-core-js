    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "declaration": true,
        "outDir": "./lib/esm",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}