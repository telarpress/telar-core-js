{
  "name": "telar-core",
  "version": "1.0.19",
  "description": "Telar core in JavaScript.",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "scripts": {
    "test": "jest --config jestconfig.json --maxWorkers=10 --detectOpenHandles --forceExit",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/telarpress/telar-core-js.git"
  },
  "keywords": [
    "telar",
    "core"
  ],
  "author": "Amir Movahedi <amir.gholzam@live.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/telarpress/telar-core-js/issues"
  },
  "homepage": "https://github.com/telarpress/telar-core-js#readme",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/node-fetch": "^2.5.7",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "crypto-js": "^4.0.0",
    "express": "^4.17.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.13",
    "plivo": "^4.10.0",
    "request-ip": "^2.1.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "@types/request-ip": "0.0.35",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "nodemailer-mock": "^1.5.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.2",
    "typescript": "^4.0.3"
  },
  "files": [
    "lib"
  ]
}
